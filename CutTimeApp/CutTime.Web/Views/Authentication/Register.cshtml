@model CutTime.Domain.Models.User

@{
    Layout = "_Login_Layout";
}

<div class="register-box-body">
    <p class="login-box-msg">Registrar usuario</p>

    @Html.AntiForgeryToken()

    <form asp-controller="Authentication" asp-action="Register" method="post">
        <div class="form-group has-feedback">
            <input type="text" class="form-control" asp-for="Name" placeholder="Nombre">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group has-feedback">
            <input type="text" class="form-control" asp-for="Lastname" placeholder="Apellido">
            <span asp-validation-for="Lastname" class="text-danger"></span>
        </div>
        <div class="form-group has-feedback">
            <input type="email" class="form-control" asp-for="Email" placeholder="Correo">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group has-feedback">
            <input type="password" class="form-control" asp-for="Password" placeholder="Contraseña">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group has-feedback">
            <input type="password" class="form-control" asp-for="PasswordConfirmed" placeholder="Confirmar contraseña">
            <span asp-validation-for="PasswordConfirmed" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Registrar</button>
            </div><!-- /.col -->
        </div>
    </form>
    
    </br>
    <a asp-area="" asp-controller="Authentication" asp-action="Login" class="text-center">Ya tengo una cuenta!</a>
</div><!-- /.form-box -->