
@{
    ViewData["Title"] = "PageNotFound";
}

<section class="content-header">
    <h1>
        404 Error Page
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">404 error</li>
    </ol>
</section>

<main role="main" class="content">
    <div class="container-fluid">
        <!-- Main content -->
        <section class="content">
            <div class="error-page">
                <h2 class="headline text-yellow"> 404</h2>
                <div class="error-content">
                    <h3><i class="fa fa-warning text-yellow"></i> Oops! Página no encontrada.</h3>
                    <p>
                        La página que estás buscando no existe.
                    </p>

                    <div class="container-btn__error-page">
                        <a asp-controller="Home" asp-action="Index" id="error-page__btn-home" class="btn btn-warning">Inicio</a>
                    </div>
                </div><!-- /.error-content -->
            </div><!-- /.error-page -->
        </section><!-- /.content -->
    </div>
</main>

@section styles{
    <style>
        .error-page{
            display: flex;
            justify-content: center;
        }

        .error-content{
            margin-left: 40px !important;
            display: flex !important;
            flex-direction: column;
            justify-content: center;
        }

        #error-page__btn-home{
            width: 100px;
        }

        .container-btn__error-page{
            width: 100%;
        }
    </style>
}

